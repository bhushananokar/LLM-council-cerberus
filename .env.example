# ============================================================================
# LLM COUNCIL - ENVIRONMENT VARIABLES
# ============================================================================
# Copy this file to .env and fill in your actual values
# ============================================================================

# ============================================================================
# API KEYS (REQUIRED)
# ============================================================================
GROQ_API_KEY=your_groq_api_key_here
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# ============================================================================
# LLM MODELS
# ============================================================================
AGENT1_MODEL=llama-3.3-70b-versatile
AGENT1_WEIGHT=0.30

AGENT2_MODEL=qwen-2.5-72b-instruct
AGENT2_WEIGHT=0.35

AGENT3_MODEL=gemini-2.0-flash-exp
AGENT3_WEIGHT=0.35

# ============================================================================
# LLM PARAMETERS
# ============================================================================
MAX_OUTPUT_TOKENS=400
TEMPERATURE=0.1

# ============================================================================
# CONSENSUS
# ============================================================================
VARIANCE_THRESHOLD_STRONG=10
VARIANCE_THRESHOLD_MODERATE=20

# ============================================================================
# RETRY & TIMEOUT
# ============================================================================
MAX_RETRIES=3
RETRY_DELAY_SECONDS=2
REQUEST_TIMEOUT_SECONDS=60

# ============================================================================
# CACHE (Optional)
# ============================================================================
CACHE_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
CACHE_TTL_SECONDS=86400

# ============================================================================
# PROMPTS
# ============================================================================
PROMPTS_DIR=config/prompts

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO

# ============================================================================
# API SERVER
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
CORS_ORIGINS=*

# ============================================================================
# ENVIRONMENT
# ============================================================================
ENVIRONMENT=development